@model Do_an_1.Models.TbMenu
@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Quản lý</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Menus" asp-action="Index">Menu</a></li>
            </ol>
        </div>
        <div class="card mt-3">
            <div class="card-header">
                <h4 class="card-title">Chi tiết menu</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">Tiêu đề</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>
                    <dt class="col-sm-2">Alias</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Alias)</dd>
                    <dt class="col-sm-2">Mô tả</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
                    <dt class="col-sm-2">Menu cha</dt>
                    <dd class="col-sm-10">
                        @if (ViewBag.ParentName != null)
                        {
                            @ViewBag.ParentName
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </dd>
                    <dt class="col-sm-2">Cấp độ</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Levels)</dd>
                    <dt class="col-sm-2">Vị trí</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Position)</dd>
                    <dt class="col-sm-2">Ngày tạo</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedDate)</dd>
                    <dt class="col-sm-2">Người tạo</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.CreatedBy)</dd>
                    <dt class="col-sm-2">Ngày sửa</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ModifiedDate)</dd>
                    <dt class="col-sm-2">Người sửa</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.ModifiedBy)</dd>
                    <dt class="col-sm-2">Kích hoạt</dt>
                    <dd class="col-sm-10">
                        @if (Model.IsActive)
                        {
                            <span class="badge light badge-success">Kích hoạt</span>
                        }
                        else
                        {
                            <span class="badge light badge-danger">Ẩn</span>
                        }
                    </dd>
                </dl>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.MenuId" class="btn btn-primary me-2">Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary">Danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-bottom: none;
    }
</style>

