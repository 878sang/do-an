@model IEnumerable<Do_an_1.Models.TbMenu>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-body">
    <div class="container-fluid">

        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Table</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Datatable</a></li>
            </ol>
        </div>
        <!-- row -->


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title"> QUẢN LÝ MENU</h4>
                    </div>
                    
                    <div class="card-body">
                        <div class="table-responsive">
                                <a asp-action="Create" class="btn btn-success mb-3">
                                    <i class="fa fa-plus"> Tạo mới</i>
                                </a>
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>Tiêu đề</th>
                                        <th>Alias</th>
                                        <th>Cấp</th>
                                        <th>Vị trí</th>
                                        <th>Hiện</th>
                                        <th style="width:30%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>

                                            <td>@item.Title</td>
                                            <td>@item.Alias</td>
                                            <td>@item.Levels</td>
                                            <td>@item.Position</td>
                                            <td>@item.IsActive</td>

                                            <td>
                                                <div class="d-flex">
                                                    <a asp-action="Edit" asp-route-id="@item.MenuId"
                                                       class="btn btn-primary shadow btn-xs sharp me-1">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.MenuId"
                                                       class="btn btn-danger shadow btn-xs sharp">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </div>
                                                @* <a asp-action="Details" asp-route-id="@item.MenuId" class="btn btn-info">Chi tiết</a> *@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>