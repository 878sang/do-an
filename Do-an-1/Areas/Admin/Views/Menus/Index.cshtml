@model IEnumerable<Do_an_1.Models.TbMenu>
@{
    ViewData["Title"] = "Danh sách menu";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">

        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Table</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Datatable</a></li>
            </ol>
        </div>
        <!-- row -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">QUẢN LÝ MENU</h4>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <a asp-action="Create" class="btn btn-success mb-3">
                                <i class="fa fa-plus"> Tạo mới</i>
                            </a>
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Số TT</th>
                                        <th>Tiêu đề</th>
                                        <th>Alias</th>
                                        <th>Mô tả</th>
                                        <th>Menu cha</th>
                                        <th>Cấp độ</th>
                                        <th>Vị trí</th>
                                        <th>Ngày tạo</th>
                                        <th>Người tạo</th>
                                        <th>Kích hoạt</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@(i++)</td>
                                            <td>@Html.DisplayFor(m => item.Title)</td>
                                            <td>@Html.DisplayFor(m => item.Alias)</td>
                                            <td>@Html.DisplayFor(m => item.Description)</td>
                                            <td>
                                                @if (item.ParentId.HasValue)
                                                {
                                                    var parent = Model.FirstOrDefault(m => m.MenuId == item.ParentId.Value);
                                                    @(parent?.Title ?? "N/A")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@Html.DisplayFor(m => item.Levels)</td>
                                            <td>@Html.DisplayFor(m => item.Position)</td>
                                            <td>@Html.DisplayFor(m => item.CreatedDate)</td>
                                            <td>@Html.DisplayFor(m => item.CreatedBy)</td>
                                            <td>
                                                @if (item.IsActive)
                                                {
                                                    <span class="badge light badge-success">Kích hoạt</span>
                                                }
                                                else
                                                {
                                                    <span class="badge light badge-danger">Ẩn</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex">
                                                    <a asp-action="Details" asp-route-id="@item.MenuId"
                                                        class="btn btn-info btn-xs me-1">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.MenuId"
                                                        class="btn btn-primary btn-xs me-1">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.MenuId"
                                                        class="btn btn-danger btn-xs"><i class="fa fa-trash"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
