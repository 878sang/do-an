@model Do_an_1.Models.TbCustomer
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Khách hàng</a></li>
                <li class="breadcrumb-item active">Chi tiết</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">CHI TIẾT KHÁCH HÀNG</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5>Thông tin cá nhân</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Tên:</dt>
                                    <dd class="col-sm-8">@Model.Name</dd>
                                    <dt class="col-sm-4">Email:</dt>
                                    <dd class="col-sm-8">@Model.Email</dd>
                                    <dt class="col-sm-4">Điện thoại:</dt>
                                    <dd class="col-sm-8">@Model.Phone</dd>
                                    <dt class="col-sm-4">Username:</dt>
                                    <dd class="col-sm-8">@Model.Username</dd>
                                    <dt class="col-sm-4">Ngày sinh:</dt>
                                    <dd class="col-sm-8">@(Model.Birthday?.ToString("dd/MM/yyyy") ?? "N/A")</dd>
                                    <dt class="col-sm-4">Địa chỉ:</dt>
                                    <dd class="col-sm-8">@Model.Location</dd>
                                    <dt class="col-sm-4">Trạng thái:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge badge-@(Model.IsActive == true ? "success" : "danger")">
                                            @(Model.IsActive == true ? "Hoạt động" : "Khóa")
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5>Đơn hàng (@Model.TbOrders.Count)</h5>
                            @if (Model.TbOrders != null && Model.TbOrders.Any())
                            {
                                @foreach (var order in Model.TbOrders.OrderByDescending(o => o.CreatedDate))
                                {
                                    <div class="card mb-3">
                                        <div class="card-header">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <strong>Mã đơn: @order.Code</strong>
                                                </div>
                                                <div class="col-md-6 text-end">
                                                    <span class="badge badge-@(order.OrderStatus?.OrderStatusId == 5 ? "success" : order.OrderStatus?.OrderStatusId == 6 ? "danger" : "warning")">
                                                        @(order.OrderStatus?.Description ?? order.OrderStatus?.Name ?? "N/A")
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="row mb-2">
                                                <div class="col-md-6">
                                                    <strong>Ngày tạo:</strong> @(order.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "")
                                                </div>
                                                <div class="col-md-6">
                                                    <strong>Phương thức thanh toán:</strong> @(order.PaymentMethod == "VNPAY" ? "Đã thanh toán" : "Chưa thanh toán")
                                                </div>
                                            </div>
                                            @if (!string.IsNullOrEmpty(order.ShippingAddress))
                                            {
                                                <div class="mb-2">
                                                    <strong>Địa chỉ giao hàng:</strong> @order.ShippingAddress
                                                </div>
                                            }
                                            <div class="table-responsive">
                                                <table class="table table-sm table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th>Sản phẩm</th>
                                                            <th>Số lượng</th>
                                                            <th>Giá</th>
                                                            <th>Thành tiền</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @if (order.TbOrderDetails != null && order.TbOrderDetails.Any())
                                                        {
                                                            @foreach (var detail in order.TbOrderDetails)
                                                            {
                                                                <tr>
                                                                    <td>@(detail.Product?.Title ?? "N/A")</td>
                                                                    <td>@detail.Quantity</td>
                                                                    <td>@string.Format("{0:n0}", detail.Price) đ</td>
                                                                    <td>@string.Format("{0:n0}", detail.Price * detail.Quantity) đ</td>
                                                                </tr>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <tr>
                                                                <td colspan="4" class="text-center">Không có chi tiết</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            <th colspan="3" class="text-end">Tổng cộng:</th>
                                                            <th class="text-danger">@string.Format("{0:n0}", order.TotalAmount ?? 0) đ</th>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">Khách hàng chưa có đơn hàng nào.</p>
                            }
                        </div>

                        <div class="mb-4">
                            <h5>Đánh giá sản phẩm (@(Model.TbProductReviews?.Count ?? 0))</h5>
                            @if (Model.TbProductReviews != null && Model.TbProductReviews.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Sản phẩm</th>
                                                <th>Sao</th>
                                                <th>Nội dung</th>
                                                <th>Ngày đánh giá</th>
                                                <th>Trạng thái</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var review in Model.TbProductReviews.OrderByDescending(r => r.CreatedDate))
                                            {
                                                <tr>
                                                    <td>
                                                        @if (review.Product != null)
                                                        {
                                                            <a href="/Admin/Products/Details/@review.Product.ProductId" target="_blank">
                                                                @review.Product.Title
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <span>N/A</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <span class="text-warning">@(i <= review.Star ? "★" : "☆")</span>
                                                        }
                                                        (@review.Star)
                                                    </td>
                                                    <td>@(string.IsNullOrEmpty(review.Detail) ? "Không có nội dung" : review.Detail)</td>
                                                    <td>@(review.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                                                    <td>
                                                        <span class="badge badge-@(review.IsActive == true ? "success" : "secondary")">
                                                            @(review.IsActive == true ? "Hiển thị" : "Ẩn")
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">Khách hàng chưa có đánh giá nào.</p>
                            }
                        </div>

                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">Chỉnh sửa</a>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

