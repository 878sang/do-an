@model Do_an_1.Models.TbCustomer
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Khách hàng</a></li>
                <li class="breadcrumb-item active">Chi tiết</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">CHI TIẾT KHÁCH HÀNG</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5>Thông tin cá nhân</h5>
                                <dl class="row">
                                    <dt class="col-sm-4">Tên:</dt>
                                    <dd class="col-sm-8">@Model.Name</dd>
                                    <dt class="col-sm-4">Email:</dt>
                                    <dd class="col-sm-8">@Model.Email</dd>
                                    <dt class="col-sm-4">Điện thoại:</dt>
                                    <dd class="col-sm-8">@Model.Phone</dd>
                                    <dt class="col-sm-4">Username:</dt>
                                    <dd class="col-sm-8">@Model.Username</dd>
                                    <dt class="col-sm-4">Ngày sinh:</dt>
                                    <dd class="col-sm-8">@(Model.Birthday?.ToString("dd/MM/yyyy") ?? "N/A")</dd>
                                    <dt class="col-sm-4">Địa chỉ:</dt>
                                    <dd class="col-sm-8">@Model.Location</dd>
                                    <dt class="col-sm-4">Trạng thái:</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge badge-@(Model.IsActive == true ? "success" : "danger")">
                                            @(Model.IsActive == true ? "Hoạt động" : "Khóa")
                                        </span>
                                    </dd>
                                </dl>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5>Đơn hàng (@Model.TbOrders.Count)</h5>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Mã đơn</th>
                                            <th>Ngày tạo</th>
                                            <th>Tổng tiền</th>
                                            <th>Trạng thái</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var order in Model.TbOrders)
                                        {
                                            <tr>
                                                <td>@order.Code</td>
                                                <td>@(order.CreatedDate?.ToString("dd/MM/yyyy") ?? "")</td>
                                                <td>@string.Format("{0:n0}", order.TotalAmount) đ</td>
                                                <td>@(order.OrderStatus?.Name ?? "N/A")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5>Đánh giá sản phẩm (@Model.TbProductReviews.Count)</h5>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Sản phẩm</th>
                                            <th>Sao</th>
                                            <th>Nội dung</th>
                                            <th>Ngày đánh giá</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var review in Model.TbProductReviews)
                                        {
                                            <tr>
                                                <td>@(review.Product?.Title ?? "N/A")</td>
                                                <td>@review.Star</td>
                                                <td>@review.Detail</td>
                                                <td>@(review.CreatedDate?.ToString("dd/MM/yyyy") ?? "")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">Chỉnh sửa</a>
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

