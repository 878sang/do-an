@model Do_an_1.Models.TbCustomer
@{
    ViewData["Title"] = "Xóa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Khách hàng</a></li>
                <li class="breadcrumb-item active">Xóa</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">XÓA KHÁCH HÀNG</h4>
                    </div>
                    <div class="card-body">
                        <h3>Bạn có chắc chắn muốn xóa khách hàng này?</h3>
                        <div>
                            <dl class="row">
                                <dt class="col-sm-2">Tên:</dt>
                                <dd class="col-sm-10">@Model.Name</dd>
                                <dt class="col-sm-2">Email:</dt>
                                <dd class="col-sm-10">@Model.Email</dd>
                                <dt class="col-sm-2">Điện thoại:</dt>
                                <dd class="col-sm-10">@Model.Phone</dd>
                            </dl>

                            <form asp-action="Delete" method="post">
                                <input type="hidden" asp-for="CustomerId" />
                                <input type="submit" value="Xóa" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

