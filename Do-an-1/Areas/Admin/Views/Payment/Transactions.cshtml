@model IEnumerable<Do_an_1.Models.TbOrder>
@{
    ViewData["Title"] = "Lịch sử giao dịch";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Thanh toán</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Lịch sử giao dịch</a></li>
            </ol>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">LỊCH SỬ GIAO DỊCH</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Khách hàng</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày giao dịch</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Code</td>
                                            <td>@(item.Customer?.Name ?? "N/A")</td>
                                            <td>@string.Format("{0:n0}", item.TotalAmount) đ</td>
                                            <td>
                                                <span class="badge badge-@(item.OrderStatus?.Name?.Contains("Hoàn thành") == true ? "success" : 
                                                                        item.OrderStatus?.Name?.Contains("Hủy") == true ? "danger" : "warning")">
                                                    @(item.OrderStatus?.Name ?? "N/A")
                                                </span>
                                            </td>
                                            <td>@(item.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                                            <td>
                                                <a href="/Admin/Orders/Details/@item.OrderId" class="btn btn-primary btn-xs">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

