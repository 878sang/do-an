@model Do_an_1.Models.TbProduct

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Form</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Validation</a></li>
            </ol>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Sửa sản phẩm</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                            <form asp-action="Edit" class="needs-validation" novalidate="">
                                <input type="hidden" asp-for="ProductId" />
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="mb-3 row">
                                            <label asp-for="Title" class="col-lg-1 col-form-label"
                                                for="validationCustom01">Tiêu đề <span
                                                    class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input asp-for="Title" type="text" class="form-control"
                                                    id="validationCustom01" required>
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Alias" class="col-lg-1 col-form-label"
                                                for="validationCustom02">Alias <span
                                                    class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input asp-for="Alias" type="text" class="form-control"
                                                    id="validationCustom02" required>
                                                <span asp-validation-for="Alias" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Description" class="col-lg-1 col-form-label">Mô tả</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Description" type="text" class="form-control" />
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Detail" class="col-lg-1 col-form-label">Chi tiết</label>
                                            <div class="col-lg-6">
                                                <textarea asp-for="Detail" class="form-control"></textarea>
                                                <span asp-validation-for="Detail" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="CategoryProductId" class="col-lg-1 col-form-label">Danh
                                                mục</label>
                                            <div class="col-lg-6">
                                                <select asp-for="CategoryProductId" class="form-control"
                                                    asp-items="ViewBag.CategoryProductId"></select>
                                                <span asp-validation-for="CategoryProductId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        @if (Model.TbProductVariants != null && Model.TbProductVariants.Any())
                                        {
                                            <div class="mb-3">
                                                <div class="card-header bg-light border-top mb-3">
                                                    <h5 class="card-title mb-0">Các biến thể của sản phẩm</h5>
                                                </div>
                                                <div class="card-body px-2 py-2">
                                                    <table class="table table-bordered table-sm mb-2" id="variant-table">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th>Màu sắc</th>
                                                                <th>Kích thước</th>
                                                                <th>SKU</th>
                                                                <th>Giá</th>
                                                                <th>Giá sale</th>
                                                                <th>Số lượng</th>
                                                                <th>Kích hoạt</th>
                                                                <th>Thao tác</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="variants-body">
                                                            @for (int i = 0; i < Model.TbProductVariants.Count; i++)
                                                            {
                                                                var variant = Model.TbProductVariants.ElementAt(i);
                                                                <tr data-variant-id="@variant.VariantId">
                                                                    <td>
                                                                        <select name="Variants[@i].ColorId" class="form-control form-control-sm">
                                                                            <option value="">-Chọn-</option>
                                                                            @foreach (var color in ((SelectList)ViewBag.Colors))
                                                                            {
                                                                                <option value="@color.Value" selected="@(color.Value == variant.ColorId?.ToString())">@color.Text</option>
                                                                            }
                                                                        </select>
                                                                        <input type="hidden" name="Variants[@i].VariantId" value="@variant.VariantId" />
                                                                    </td>
                                                                    <td>
                                                                        <select name="Variants[@i].SizeId" class="form-control form-control-sm">
                                                                            <option value="">-Chọn-</option>
                                                                            @foreach (var size in ((SelectList)ViewBag.Sizes))
                                                                            {
                                                                                <option value="@size.Value" selected="@(size.Value == variant.SizeId?.ToString())">@size.Text</option>
                                                                            }
                                                                        </select>
                                                                    </td>
                                                                    <td><input class="form-control form-control-sm" name="Variants[@i].Sku" value="@variant.Sku" /></td>
                                                                    <td><input class="form-control form-control-sm" name="Variants[@i].Price" type="number" step="0.01" value="@(variant.Price.HasValue ? variant.Price.Value.ToString("0.##") : "")" /></td>
                                                                    <td><input class="form-control form-control-sm" name="Variants[@i].PriceSale" type="number" step="0.01" value="@(variant.PriceSale.HasValue ? variant.PriceSale.Value.ToString("0.##") : "")" /></td>
                                                                    <td><input class="form-control form-control-sm" name="Variants[@i].Quantity" type="number" value="@variant.Quantity" /></td>
                                                                    <td class="text-center">
                                                                        <input type="checkbox" name="Variants[@i].IsActive" value="true" @(variant.IsActive == true ? "checked" : "") />
                                                                    </td>
                                                                    <td class="text-center">
                                                                        <button type="button" class="btn btn-danger btn-sm" onclick="removeVariantRow(this)">Xóa</button>
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                    <button type="button" class="btn btn-outline-success btn-sm" onclick="addVariantRow()">+ Thêm biến thể</button>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-3">
                                                <div class="card-header bg-light border-top mb-3">
                                                    <h5 class="card-title mb-0">Các biến thể của sản phẩm</h5>
                                                </div>
                                                <div class="card-body px-2 py-2">
                                                    <table class="table table-bordered table-sm mb-2" id="variant-table">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th>Màu sắc</th>
                                                                <th>Kích thước</th>
                                                                <th>SKU</th>
                                                                <th>Giá</th>
                                                                <th>Giá sale</th>
                                                                <th>Số lượng</th>
                                                                <th>Kích hoạt</th>
                                                                <th>Thao tác</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="variants-body"></tbody>
                                                    </table>
                                                    <button type="button" class="btn btn-outline-success btn-sm" onclick="addVariantRow()">+ Thêm biến thể</button>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label asp-for="Price" class="col-lg-1 col-form-label">Giá</label>
                                                <div class="col-lg-6">
                                                    <input asp-for="Price" type="number" class="form-control" />
                                                    <span asp-validation-for="Price" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label asp-for="PriceSale" class="col-lg-1 col-form-label">Giá sale</label>
                                                <div class="col-lg-6">
                                                    <input asp-for="PriceSale" type="number" class="form-control" />
                                                    <span asp-validation-for="PriceSale" class="text-danger"></span>
                                                </div>
                                            </div>
                                        }
                                        <div class="mb-3 row">
                                            <label asp-for="Quantity" class="col-lg-1 col-form-label">Số lượng</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Quantity" type="number" class="form-control" />
                                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Star" class="col-lg-1 col-form-label">Sao</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Star" type="number" class="form-control" />
                                                <span asp-validation-for="Star" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Image" class="col-lg-1 col-form-label">Ảnh</label>
                                            <div class="col-lg-6">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <button type="button" class="btn btn-success"
                                                                onclick="openDialog()">
                                                            Choose a picture
                                                        </button>
                                                    </div>
                                                    <input asp-for="Image" type="text" class="form-control"
                                                           id="file_input" aria-describedby="button">
                                                </div>
                                                <span asp-validation-for="Image" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="CreatedDate" class="col-lg-1 col-form-label">Ngày
                                                tạo</label>
                                            <div class="col-lg-6">
                                                <input asp-for="CreatedDate" type="datetime-local"
                                                    class="form-control" />
                                                <span asp-validation-for="CreatedDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="CreatedBy" class="col-lg-1 col-form-label">Người tạo</label>
                                            <div class="col-lg-6">
                                                <input asp-for="CreatedBy" type="text" class="form-control" />
                                                <span asp-validation-for="CreatedBy" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="ModifiedDate" class="col-lg-1 col-form-label">Ngày
                                                sửa</label>
                                            <div class="col-lg-6">
                                                <input asp-for="ModifiedDate" type="datetime-local"
                                                    class="form-control" />
                                                <span asp-validation-for="ModifiedDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="ModifiedBy" class="col-lg-1 col-form-label">Người
                                                sửa</label>
                                            <div class="col-lg-6">
                                                <input asp-for="ModifiedBy" type="text" class="form-control" />
                                                <span asp-validation-for="ModifiedBy" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-1 col-form-label">Mới</label>
                                            <div class="col-lg-6">
                                                <input asp-for="IsNew" type="checkbox" class="form-check-input" />
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-1 col-form-label">Bán chạy</label>
                                            <div class="col-lg-6">
                                                <input asp-for="IsBestSeller" type="checkbox"
                                                    class="form-check-input" />
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-1 col-form-label">Kích hoạt</label>
                                            <div class="col-lg-6">
                                                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                            </div>
                                        </div>
                                        <div class="col-lg-8 ms-auto">
                                            <button type="submit" class="btn btn-primary">Lưu</button>
                                            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts { 
@{ 
         await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
     } 
     <script>
         var colorOptions = `@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(((SelectList)ViewBag.Colors).Select(x => new { x.Value, x.Text })))`;
         var sizeOptions = `@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(((SelectList)ViewBag.Sizes).Select(x => new { x.Value, x.Text })))`;
         colorOptions = JSON.parse(colorOptions);
         sizeOptions = JSON.parse(sizeOptions);
         
         var variantIndex = @(Model.TbProductVariants != null ? Model.TbProductVariants.Count : 0);
         
         function addVariantRow() {
             var tr = document.createElement('tr');
             tr.innerHTML = `
                 <td>
                     <select name="Variants[${variantIndex}].ColorId" class="form-control form-control-sm">
                         <option value="">-Chọn-</option>
                         ${colorOptions.map(c => `<option value="${c.Value}">${c.Text}</option>`).join("")}
                     </select>
                     <input type="hidden" name="Variants[${variantIndex}].VariantId" value="0" />
                 </td>
                 <td>
                     <select name="Variants[${variantIndex}].SizeId" class="form-control form-control-sm">
                         <option value="">-Chọn-</option>
                         ${sizeOptions.map(s => `<option value="${s.Value}">${s.Text}</option>`).join("")}
                     </select>
                 </td>
                 <td><input class="form-control form-control-sm" name="Variants[${variantIndex}].Sku" /></td>
                 <td><input class="form-control form-control-sm" name="Variants[${variantIndex}].Price" type="number" step="0.01" /></td>
                 <td><input class="form-control form-control-sm" name="Variants[${variantIndex}].PriceSale" type="number" step="0.01" /></td>
                 <td><input class="form-control form-control-sm" name="Variants[${variantIndex}].Quantity" type="number" /></td>
                 <td class="text-center"><input type="checkbox" name="Variants[${variantIndex}].IsActive" value="true" checked /></td>
                 <td class="text-center"><button type="button" class="btn btn-danger btn-sm" onclick="removeVariantRow(this)">Xóa</button></td>
             `;
             document.getElementById('variants-body').appendChild(tr);
             variantIndex++;
         }
         
         function removeVariantRow(button) {
             var tr = button.closest('tr');
             var variantId = tr.getAttribute('data-variant-id');
             
             // Nếu là biến thể đã tồn tại, đánh dấu để xóa
             if (variantId && variantId !== '0' && variantId !== null) {
                 // Tìm hoặc tạo container cho deleted variants
                 var deletedContainer = document.getElementById('deleted-variants-container');
                 if (!deletedContainer) {
                     deletedContainer = document.createElement('div');
                     deletedContainer.id = 'deleted-variants-container';
                     deletedContainer.style.display = 'none';
                     document.querySelector('form').appendChild(deletedContainer);
                 }
                 
                 // Tạo input hidden để đánh dấu xóa
                 var deleteInput = document.createElement('input');
                 deleteInput.type = 'hidden';
                 deleteInput.name = 'DeletedVariants';
                 deleteInput.value = variantId;
                 deletedContainer.appendChild(deleteInput);
             }
             
             tr.remove();
             
             // Cập nhật lại index cho các row còn lại
             updateVariantIndexes();
         }
         
         function updateVariantIndexes() {
             var rows = document.querySelectorAll('#variants-body tr');
             rows.forEach(function(row, index) {
                 row.querySelectorAll('input, select').forEach(function(input) {
                     if (input.name && input.name.includes('Variants[')) {
                         input.name = input.name.replace(/Variants\[\d+\]/, 'Variants[' + index + ']');
                     }
                 });
             });
             variantIndex = rows.length;
         }
     </script>
 } 
