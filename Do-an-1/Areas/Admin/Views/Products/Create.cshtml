@model Do_an_1.Models.ViewModels.ProductCreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Form</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Validation</a></li>
            </ol>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thêm sản phẩm mới</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                            <form asp-action="Create" method="post" class="needs-validation" novalidate="">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                                <div class="row">
                                    <div class="col-xl-12">
                                        <div class="mb-3 row">
                                            <label asp-for="Title" class="col-lg-1 col-form-label"
                                                for="validationCustom01">Tiêu đề <span
                                                    class="text-danger">*</span></label>
                                            <div class="col-lg-6">
                                                <input asp-for="Title" type="text" class="form-control"
                                                    id="validationCustom01" required>
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Alias" class="col-lg-1 col-form-label"
                                                for="validationCustom02">Alias</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Alias" type="text" class="form-control"
                                                    id="validationCustom02">
                                                <span asp-validation-for="Alias" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Description" class="col-lg-1 col-form-label">Mô tả</label>
                                            <div class="col-lg-6">
                                                <input asp-for="Description" type="text" class="form-control" />
                                                <span asp-validation-for="Description" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Detail" class="col-lg-1 col-form-label">Chi tiết</label>
                                            <div class="col-lg-6">
                                                <textarea asp-for="Detail" class="form-control"></textarea>
                                                <span asp-validation-for="Detail" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="CategoryProductId" class="col-lg-1 col-form-label">Danh
                                                mục</label>
                                            <div class="col-lg-6">
                                                <select asp-for="CategoryProductId" class="form-control"
                                                    asp-items="ViewBag.CategoryProductId"></select>
                                                <span asp-validation-for="CategoryProductId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label asp-for="Image" class="col-lg-1 col-form-label">Ảnh</label>
                                            <div class="col-lg-6">
                                                <div class="input-group mb-3">
                                                    <div class="input-group-prepend">
                                                        <button type="button" class="btn btn-success"
                                                            onclick="openDialog()">Choose a picture</button>
                                                    </div>
                                                    <input asp-for="Image" type="text" class="form-control"
                                                        id="file_input" aria-describedby="button">
                                                </div>
                                                <span asp-validation-for="Image" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-1 col-form-label">Có biến thể?</label>
                                            <div class="col-lg-6 d-flex align-items-center">
                                                <input type="checkbox" id="hasVariants" name="HasVariants"
                                                    class="form-check-input" onchange="toggleVariantMode()" />
                                            </div>
                                        </div>
                                        <div id="single-product-section">
                                            <div class="mb-3 row">
                                                <label asp-for="Price" class="col-lg-1 col-form-label">Giá</label>
                                                <div class="col-lg-6">
                                                    <input asp-for="Price" type="number" class="form-control" />
                                                    <span asp-validation-for="Price" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label asp-for="PriceSale" class="col-lg-1 col-form-label">Giá
                                                    sale</label>
                                                <div class="col-lg-6">
                                                    <input asp-for="PriceSale" type="number" class="form-control" />
                                                    <span asp-validation-for="PriceSale" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="mb-3 row">
                                                <label asp-for="Quantity" class="col-lg-1 col-form-label">Số
                                                    lượng</label>
                                                <div class="col-lg-6">
                                                    <input asp-for="Quantity" type="number" class="form-control" />
                                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div id="variant-section" style="display:none;">
                                            <div class="card">
                                                <div class="card-body">
                                                    <table class="table table-bordered mb-2" id="variant-table">
                                                        <thead class="table-light">
                                                            <tr>
                                                                <th>Màu sắc</th>
                                                                <th>Kích thước</th>
                                                                <th>SKU</th>
                                                                <th>Giá</th>
                                                                <th>Giá sale</th>
                                                                <th>Ảnh</th>
                                                                <th>Số lượng</th>
                                                                <th>Hiển thị?</th>
                                                                <th></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="variants-body"></tbody>
                                                    </table>
                                                    <button type="button" class="btn btn-outline-success"
                                                        onclick="addVariantRow()">+ Thêm biến thể</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-1 col-form-label">Mới</label>
                                            <div class="col-lg-6">
                                                <input asp-for="IsNew" type="checkbox" class="form-check-input" />
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-1 col-form-label">Bán chạy</label>
                                            <div class="col-lg-6">
                                                <input asp-for="IsBestSeller" type="checkbox"
                                                    class="form-check-input" />
                                            </div>
                                        </div>
                                        <div class="mb-3 row">
                                            <label class="col-lg-1 col-form-label">Kích hoạt</label>
                                            <div class="col-lg-6">
                                                <input asp-for="IsActive" type="checkbox" class="form-check-input" />
                                            </div>
                                        </div>
                                        <div class="col-lg-8 ms-auto">
                                            <button type="submit" class="btn btn-success btn-lg">Tạo sản
                                                phẩm</button>
                                            <a asp-action="Index" class="btn btn-secondary">Quay lại danh
                                                sách</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function toggleVariantMode() {
            var checked = document.getElementById('hasVariants').checked;
            document.getElementById('single-product-section').style.display = checked ? 'none' : '';
            document.getElementById('variant-section').style.display = checked ? '' : 'none';
        }
        var colorOptions = `@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(((SelectList)ViewBag.Colors).Select(x => new { x.Value, x.Text })))`;
        var sizeOptions = `@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(((SelectList)ViewBag.Sizes).Select(x => new { x.Value, x.Text })))`;
        colorOptions = JSON.parse(colorOptions);
        sizeOptions = JSON.parse(sizeOptions);
        function addVariantRow() {
            var rowIdx = document.querySelectorAll('#variants-body tr').length;
            var tr = document.createElement('tr');
            tr.innerHTML = `
        <td><select name="Variants[${rowIdx}].ColorId" class="form-control"><option value="">-Chọn-</option>${colorOptions.map(c => `<option value="${c.Value}">${c.Text}</option>`).join("")}</select></td>
        <td><select name="Variants[${rowIdx}].SizeId" class="form-control"><option value="">-Chọn-</option>${sizeOptions.map(s => `<option value="${s.Value}">${s.Text}</option>`).join("")}</select></td>
        <td><input class="form-control" name="Variants[${rowIdx}].Sku" /></td>
        <td><input class="form-control" name="Variants[${rowIdx}].Price" type="number" step="0.01" /></td>
        <td><input class="form-control" name="Variants[${rowIdx}].PriceSale" type="number" step="0.01" /></td>
        <td>
                <div class="input-group-prepend">
                    <button type="button" class="btn btn-success"
                        onclick="openDialog()">Chọn ảnh</button>
                </div>
        </td>
        <td><input class="form-control" name="Variants[${rowIdx}].Quantity" type="number" /></td>
        <td class="text-center"><input type="checkbox" name="Variants[${rowIdx}].IsActive" value="true" checked></td>
        <td><button type="button" class="btn btn-danger btn-sm" onclick="this.closest('tr').remove()">Xoá</button></td>
    `;
            document.getElementById('variants-body').appendChild(tr);
        }
    </script>
}
@{
    var summerNote = new Do_an_1.Areas.Admin.Models.SummerNote("#Detail");
    <partial name="_SummerNote" model="summerNote" />
}