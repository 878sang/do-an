@model Do_an_1.Models.TbProduct

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Quản lý</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Products" asp-action="Index">Sản
                        phẩm</a></li>
            </ol>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-12">
                <div class="col-md">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa sản phẩm</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group"><label>Tiêu đề:</label> @Html.DisplayFor(model => model.Title)</div>
                            <div class="form-group"><label>Mô tả:</label> @Html.DisplayFor(model => model.Description)
                            </div>
                            <div class="form-group"><label>Chi tiết:</label> @Html.DisplayFor(model => model.Detail)
                            </div>
                            <div class="form-group"><label>Ảnh:</label>
                                @if (!string.IsNullOrWhiteSpace(Model.Image))
                                {
                                    <img src="@Url.Content(Model.Image)" width="50" height="50" />
                                }
                            </div>
                            <div class="form-group"><label>Giá:</label> @Html.DisplayFor(model => model.Price)</div>
                            <div class="form-group"><label>Giá sale:</label> @Html.DisplayFor(model => model.PriceSale)
                            </div>
                            <div class="form-group"><label>Số lượng:</label> @Html.DisplayFor(model => model.Quantity)
                            </div>
                            <div class="form-group"><label>Ngày tạo:</label> @Html.DisplayFor(model =>
                                                                model.CreatedDate)</div>
                            <div class="form-group"><label>Người tạo:</label> @Html.DisplayFor(model => model.CreatedBy)
                            </div>
                            <div class="form-group"><label>Hoạt động:</label> @Html.DisplayFor(model => model.IsActive)
                            </div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ProductId" />
                                <input type="submit" value="Xóa" class="btn btn-danger" />
                                <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .card-body .form-group label {
        font-size: 14px;
        color: #495057;
    }

    .card-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-bottom: none;
    }
</style>
