@model Do_an_1.Models.TbBlogCategory
@{
    ViewData["Title"] = "Xoá danh mục bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<h2>Xác nhận xoá danh mục bài viết</h2>
<hr />
<div class="alert alert-warning">
    <strong>Bạn có chắc muốn xoá danh mục này?</strong>
</div>
<div>
    <dl class="row">
        <dt class = "col-sm-2">Tiêu đề</dt>
        <dd class = "col-sm-10">@Model.Title</dd>
        <dt class = "col-sm-2">Alias</dt>
        <dd class = "col-sm-10">@Model.Alias</dd>
        <dt class = "col-sm-2">Mô tả</dt>
        <dd class = "col-sm-10">@Model.Description</dd>
        <dt class = "col-sm-2">Ngày tạo</dt>
        <dd class = "col-sm-10">@Model.CreatedDate</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="BlogCategoryId" />
        <button type="submit" class="btn btn-danger">Xoá</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
