@model Do_an_1.Models.TbOrder
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Đơn hàng</a></li>
                <li class="breadcrumb-item active">Chi tiết</li>
            </ol>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">CHI TIẾT ĐƠN HÀNG #@Model.Code</h4>
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <h5>Thông tin khách hàng</h5>
                                <p><strong>Tên:</strong> @(Model.Customer?.Name ?? "N/A")</p>
                                <p><strong>Email:</strong> @(Model.Customer?.Email ?? "N/A")</p>
                                <p><strong>Điện thoại:</strong> @(Model.Customer?.Phone ?? "N/A")</p>
                            </div>
                            <div class="col-md-6">
                                <h5>Thông tin đơn hàng</h5>
                                <p><strong>Mã đơn:</strong> @Model.Code</p>
                                <p><strong>Ngày tạo:</strong> @(Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "")
                                </p>
                                <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress</p>
                                <p><strong>Tổng tiền:</strong> <span
                                        class="text-danger fw-bold">@string.Format("{0:n0}", Model.TotalAmount) đ</span>
                                </p>
                            </div>
                        </div>

                        <div class="mb-4">
                            <h5>Cập nhật trạng thái</h5>
                            <form asp-action="UpdateStatus" method="post" class="d-flex gap-2 align-items-end">
                                <input type="hidden" name="id" value="@Model.OrderId" />
                                <div class="form-group">
                                    <select name="orderStatusId" class="form-select"
                                        asp-items="ViewBag.OrderStatuses"></select>
                                </div>
                                <button type="submit" class="btn btn-primary">Cập nhật</button>
                            </form>
                        </div>

                        <div class="table-responsive">
                            <h5>Chi tiết sản phẩm</h5>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detail in Model.TbOrderDetails)
                                    {
                                        <tr>
                                            <td>@(detail.Product?.Title ?? "N/A")</td>
                                            <td>@detail.Quantity</td>
                                            <td>@string.Format("{0:n0}", detail.Price) đ</td>
                                            <td>@string.Format("{0:n0}", detail.Price * detail.Quantity) đ</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th colspan="3" class="text-end">Tổng cộng:</th>
                                        <th>@string.Format("{0:n0}", Model.TotalAmount) đ</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="mt-3">
                            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
