@model IEnumerable<Do_an_1.Models.TbOrder>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var status = ViewBag.Status as string ?? "all";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Đơn hàng</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">Danh sách</a></li>
            </ol>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">QUẢN LÝ ĐƠN HÀNG</h4>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <form method="get" class="d-flex gap-2">
                                <select name="status" class="form-select" style="max-width: 250px;"
                                    onchange="this.form.submit()">
                                    @foreach (var item in ViewBag.StatusList as SelectList)
                                    {
                                        <option value="@item.Value" selected="@(item.Value == status)">@item.Text</option>
                                    }
                                </select>
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table id="example3" class="display" style="min-width: 845px">
                                <thead>
                                    <tr>
                                        <th>Mã đơn</th>
                                        <th>Khách hàng</th>
                                        <th>Địa chỉ giao hàng</th>
                                        <th>Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày tạo</th>
                                        <th>Hành động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                    }
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(m => item.Code)</td>
                                            <td>@(item.Customer?.Name ?? "N/A")</td>
                                            <td>@Html.DisplayFor(m => item.ShippingAddress)</td>
                                            <td>@string.Format("{0:n0}", item.TotalAmount) đ</td>
                                            <td>
                                                <span
                                                    class="badge badge-@(item.OrderStatus?.Name?.Contains("Mới") == true ? "primary" : 
                                                                                                                            item.OrderStatus?.Name?.Contains("Xử lý") == true ? "warning" :
                                                                                                                            item.OrderStatus?.Name?.Contains("Giao hàng") == true ? "info" :
                                                                                                                            item.OrderStatus?.Name?.Contains("Hoàn thành") == true ? "success" :
                                                                                                                            item.OrderStatus?.Name?.Contains("Hủy") == true ? "danger" : "secondary")">
                                                @(item.OrderStatus?.Name ?? "N/A")
                                            </span>
                                        </td>
                                        <td>@(item.CreatedDate?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                                        <td>
                                            <div class="d-flex">
                                                <a asp-action="Details" asp-route-id="@item.OrderId"
                                                    class="btn btn-primary btn-xs me-1">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.OrderId"
                                                    class="btn btn-danger btn-xs">
                                                    <i class="fa fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                                                        }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
