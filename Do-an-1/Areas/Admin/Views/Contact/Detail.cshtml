@model Do_an_1.Models.TbContact

@{
    ViewData["Title"] = "Chi tiết liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Chi tiết tin nhắn</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Tin nhắn từ: <strong>@Model.Name</strong></h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label>Ngày gửi:</label>
                    <p>@Model.CreatedDate?.ToString("dd/MM/yyyy HH:mm:ss")</p>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <p>@Model.Email</p>
                </div>
                <div class="form-group">
                    <label>Số điện thoại:</label>
                    <p>@Model.Phone</p>
                </div>
                <div class="form-group">
                    <label>Nội dung tin nhắn:</label>
                    <textarea class="form-control" rows="5" readonly>@Model.Message</textarea>
                </div>
            </div>
            <div class="card-footer">
                <a href="/Admin/Contact" class="btn btn-default">Quay lại danh sách</a>
            </div>
        </div>
    </section>
</div>