    <script>
        (function () {
            var toastTimeout;
            function hideCartToast() {
                var toast = document.getElementById('cart-toast');
                if (!toast) return;
                toast.classList.remove('show');
                toast.style.opacity = '0';
                setTimeout(function () {
                    toast.style.display = 'none';
                }, 200);
            }

            window.setCartCount = function (count) {
                try {
                    document.querySelectorAll('.items__count').forEach(function (el) {
                        el.textContent = count;
                    });
                } catch (e) { }
            };

            window.showCartToast = function (message, isError) {
                var toast = document.getElementById('cart-toast');
                var toastBody = document.getElementById('cart-toast-body');
                if (!toast || !toastBody) return;

                toastBody.textContent = message;
                toast.classList.remove('bg-success', 'bg-danger');
                toast.classList.add(isError ? 'bg-danger' : 'bg-success');

                if (toastTimeout) {
                    clearTimeout(toastTimeout);
                }

                toast.style.display = 'block';
                requestAnimationFrame(function () {
                    toast.style.opacity = '1';
                    toast.classList.add('show');
                });

                toastTimeout = setTimeout(hideCartToast, 2500);
            };

            var closeBtn = document.getElementById('cart-toast-close');
            if (closeBtn) {
                closeBtn.addEventListener('click', function () {
                    hideCartToast();
                    if (toastTimeout) {
                        clearTimeout(toastTimeout);
                    }
                });
            }
        })();

        function addToCart(productId, size, color, quantity) {
            fetch('/Cart/AddToCart', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    id: productId,
                    size: size,
                    color: color,
                    quantity: quantity
                })
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        loadMiniCart();
                        showCartToast('Đã thêm vào giỏ!', false);
                        if (typeof setCartCount === 'function' && data.cartCount !== undefined) {
                            setCartCount(data.cartCount);
                        }
                    } else {
                        showCartToast(data.message || 'Lỗi thêm giỏ hàng', true);
                    }
                });
        }
        function loadMiniCart() {
            fetch('/Cart/MiniCart')
                .then(res => res.text())
                .then(html => {
                    var panel = document.querySelector('.offCanvas__minicart');
                    if (!panel) return;
                    panel.innerHTML = html;
                    try {
                        var distinct = panel.querySelectorAll('.minicart__product--items').length;
                        if (typeof setCartCount === 'function') setCartCount(distinct);
                    } catch (e) { }
                });
        }
    </script>

