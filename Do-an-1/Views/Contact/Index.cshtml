@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main__content_wrapper">

    <section class="breadcrumb__section breadcrumb__bg">
        <div class="container">
            <div class="row row-cols-1">
                <div class="col">
                    <div class="breadcrumb__content text-center">
                        <h1 class="breadcrumb__content--title text-white mb-25">Liên hệ với chúng tôi</h1>
                        <ul class="breadcrumb__content--menu d-flex justify-content-center">
                            <li class="breadcrumb__content--menu__items"><a class="text-white" href="/">Trang chủ</a></li>
                            <li class="breadcrumb__content--menu__items"><span class="text-white">Liên hệ</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="contact__section section--padding">
        <div class="container">
            <div class="section__heading text-center mb-40">
                <h2 class="section__heading--maintitle">Kết nối với chúng tôi</h2>
            </div>
            <div class="main__contact--area position__relative">

                <div class="contact__form">
                    <h3 class="contact__form--title mb-40">Gửi tin nhắn</h3>
                    <form class="contact__form--inner" id="contactForm">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="contact__form--list mb-20">
                                    <label class="contact__form--label" for="txtName">Họ và tên <span class="contact__form--label__star">*</span></label>
                                    <input class="contact__form--input" name="name" id="txtName" placeholder="Nhập họ tên của bạn" type="text">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6">
                                <div class="contact__form--list mb-20">
                                    <label class="contact__form--label" for="txtPhone">Số điện thoại <span class="contact__form--label__star">*</span></label>
                                    <input class="contact__form--input" name="phone" id="txtPhone" placeholder="Nhập số điện thoại" type="text">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="contact__form--list mb-20">
                                    <label class="contact__form--label" for="txtEmail">Email <span class="contact__form--label__star">*</span></label>
                                    <input class="contact__form--input" name="email" id="txtEmail" placeholder="Email" type="email">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="contact__form--list mb-15">
                                    <label class="contact__form--label" for="txtMessage">Nội dung <span class="contact__form--label__star">*</span></label>
                                    <textarea class="contact__form--textarea" name="message" id="txtMessage" placeholder="Bạn cần hỗ trợ gì?"></textarea>
                                </div>
                            </div>
                        </div>
                        <button class="contact__form--btn primary__btn" type="button" id="btnSend">GỬI NGAY</button>
                    </form>
                </div>

                <div class="contact__info border-radius-5">
                    <div class="contact__info--items">
                        <h3 class="contact__info--content__title text-white mb-15">Thông tin liên hệ</h3>
                        <div class="contact__info--items__inner d-flex">
                            <div class="contact__info--icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="31.568" height="31.128" viewBox="0 0 31.568 31.128">
                                    <path id="ic_phone_forwarded_24px" d="M26.676,16.564l7.892-7.782L26.676,1V5.669H20.362v6.226h6.314Zm3.157,7a18.162,18.162,0,0,1-5.635-.887,1.627,1.627,0,0,0-1.61.374l-3.472,3.424a23.585,23.585,0,0,1-10.4-10.257l3.472-3.44a1.48,1.48,0,0,0,.395-1.556,17.457,17.457,0,0,1-.9-5.556A1.572,1.572,0,0,0,10.1,4.113H4.578A1.572,1.572,0,0,0,3,5.669,26.645,26.645,0,0,0,29.832,32.128a1.572,1.572,0,0,0,1.578-1.556V25.124A1.572,1.572,0,0,0,29.832,23.568Z" transform="translate(-3 -1)" fill="currentColor" />
                                </svg>
                            </div>
                            <div class="contact__info--content">
                                <p class="contact__info--content__desc text-white">Hotline hỗ trợ <br> <a href="tel:+01234-567890">+01234-567890</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="contact__info--items">
                        <h3 class="contact__info--content__title text-white mb-15">Email Address</h3>
                        <div class="contact__info--items__inner d-flex">
                            <div class="contact__info--icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="31.57" height="31.13" viewBox="0 0 31.57 31.13">
                                    <path id="ic_email_24px" d="M30.413,4H5.157C3.421,4,2.016,5.751,2.016,7.891L2,31.239c0,2.14,1.421,3.891,3.157,3.891H30.413c1.736,0,3.157-1.751,3.157-3.891V7.891C33.57,5.751,32.149,4,30.413,4Zm0,7.783L17.785,21.511,5.157,11.783V7.891l12.628,9.728L30.413,7.891Z" transform="translate(-2 -4)" fill="currentColor" />
                                </svg>
                            </div>
                            <div class="contact__info--content">
                                <p class="contact__info--content__desc text-white"> <a href="mailto:info@example.com">thanh.cntt.dhv@gmail.com</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="contact__info--items">
                        <h3 class="contact__info--content__title text-white mb-15">Office Location</h3>
                        <div class="contact__info--items__inner d-flex">
                            <div class="contact__info--icon">
                                <svg xmlns="http://www.w3.org/2000/svg" width="31.57" height="31.13" viewBox="0 0 31.57 31.13">
                                    <path id="ic_account_balance_24px" d="M5.323,14.341V24.718h4.985V14.341Zm9.969,0V24.718h4.985V14.341ZM2,32.13H33.57V27.683H2ZM25.262,14.341V24.718h4.985V14.341ZM17.785,1,2,8.412v2.965H33.57V8.412Z" transform="translate(-2 -1)" fill="currentColor" />
                                </svg>
                            </div>
                            <div class="contact__info--content">
                                <p class="contact__info--content__desc text-white">
                                    Đại học Vinh, Nghệ An
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="contact__map--area section--padding pt-0">
        <iframe class="contact__map--iframe" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3780.273646679365!2d105.6936336749662!3d18.651739582467475!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3139ce6e20173e6b%3A0x6777274093f2f84b!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBWaW5o!5e0!3m2!1svi!2s!4v1709653896500!5m2!1svi!2s" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</main>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Khi bấm nút Gửi
            $('#btnSend').click(function (e) {
                e.preventDefault(); // Chặn load lại trang

                // Lấy dữ liệu từ các ô input thông qua ID
                var name = $('#txtName').val();
                var phone = $('#txtPhone').val();
                var email = $('#txtEmail').val();
                var message = $('#txtMessage').val();

                // Kiểm tra dữ liệu trống
                if (name == '' || phone == '' || email == '') {
                    toastr.warning('Vui lòng nhập đầy đủ Họ tên, Số điện thoại và Email!');
                    return;
                }

                // Gửi Ajax
                $.ajax({
                    url: '/Contact/Send',
                    type: 'POST',
                    data: {
                        name: name,
                        phone: phone,
                        email: email,
                        message: message
                    },
                    success: function (rs) {
                        if (rs.success) {
                            toastr.success('Gửi liên hệ thành công!');
                            // Xóa trắng form sau khi gửi
                            $('#txtName').val('');
                            $('#txtPhone').val('');
                            $('#txtEmail').val('');
                            $('#txtMessage').val('');
                        } else {
                            toastr.error('Có lỗi xảy ra, vui lòng thử lại.');
                        }
                    },
                    error: function () {
                        toastr.error('Lỗi kết nối đến máy chủ.');
                    }
                });
            });
        });
    </script>
}